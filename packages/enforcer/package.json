{
  "name": "nexus-enforcer",
  "version": "1.0.0",
  "description": "Core validation and prompt generation for nexus enforcement rules",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "boulder": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js",
      "require": "./dist/types.js"
    },
    "./engine": {
      "types": "./dist/engine/checker.d.ts",
      "import": "./dist/engine/checker.js",
      "require": "./dist/engine/checker.js"
    },
    "./prompts": {
      "types": "./dist/prompts/generator.d.ts",
      "import": "./dist/prompts/generator.js",
      "require": "./dist/prompts/generator.js"
    },
    "./boulder": {
      "types": "./dist/boulder/index.d.ts",
      "import": "./dist/boulder/index.js",
      "require": "./dist/boulder/index.js"
    },
    "./boulder/dual-layer": {
      "types": "./dist/boulder/dual-layer-enforcer.d.ts",
      "import": "./dist/boulder/dual-layer-enforcer.js",
      "require": "./dist/boulder/dual-layer-enforcer.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "deepmerge": "^4.3.1"
  },
  "devDependencies": {
    "@types/deepmerge": "^2.2.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "enforcement",
    "validation",
    "ai-agents"
  ],
  "author": "Nexus Team",
  "license": "MIT"
}
