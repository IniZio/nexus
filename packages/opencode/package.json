{
  "name": "nexus-opencode",
  "version": "1.0.0",
  "description": "OpenCode plugin adapter for nexus enforcer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --passWithNoTests",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@nexus/core": "workspace:*",
    "@opencode-ai/plugin": "^1.2.10"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nexus",
    "opencode",
    "plugin",
    "enforcement"
  ],
  "author": "Nexus Team",
  "license": "MIT"
}
