{
  "name": "nexus-claude",
  "version": "1.0.0",
  "description": "Claude plugin for nexus enforcer with auto-install support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "nexus-enforcer": "workspace:*"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.76.0",
    "@types/jest": "^29.5.0",
    "jest": "^29.7.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "nexus",
    "claude",
    "plugin",
    "enforcement",
    "anthropic"
  ],
  "author": "Nexus Team",
  "license": "MIT"
}
