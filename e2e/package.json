{
  "name": "@nexus/e2e-tests",
  "version": "0.1.0",
  "description": "End-to-end tests for Nexus Workspace SDK, Daemon, and Plugin",
  "private": true,
  "scripts": {
    "test:e2e": "jest --config jest.config.js --testPathPattern=e2e",
    "test:integration": "jest --config jest.config.js --testPathPattern=integration",
    "test": "jest --config jest.config.js",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "docker:up": "docker-compose -f docker-compose.test.yml up -d",
    "docker:down": "docker-compose -f docker-compose.test.yml down",
    "docker:build": "docker-compose -f docker-compose.test.yml build"
  },
  "keywords": [
    "nexus",
    "e2e",
    "tests",
    "testcontainers"
  ],
  "author": "Nexus Team",
  "license": "MIT",
  "dependencies": {
    "@nexus/workspace-sdk": "*"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "testcontainers": "^10.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
